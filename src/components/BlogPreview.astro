---
import type { CollectionEntry } from 'astro:content';
import { formatDate } from '../utils/date';

interface Props {
  project: CollectionEntry<'blog'>;
}

const { data, id } = Astro.props.project;
---

<a class="post-preview" href={`/blog/${id}`}>
  <div class="image">
    <img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
  </div>
  <div class="content">
    <h2 class="title">{data.title}</h2>
    <p class="description">{data.description}</p>
    <div class="metadata">
      <time datetime={data.publishDate.toISOString()}>{formatDate(data.publishDate)}</time>
      <span class="separator">Â·</span>
      <span class="read-time">5 min read</span>
    </div>
    <div class="tags">
      {data.tags.map((tag) => <span class="tag">{tag}</span>)}
    </div>
  </div>
</a>

<style>
  .post-preview {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    text-decoration: none;
    transition: background-color 0.2s ease;
    width: 100%;
  }

  .post-preview:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .image {
    width: 120px;
    height: 80px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    max-width: 400px;
  }

  .title {
    margin: 0;
    font-size: var(--text-lg);
    color: var(--accent-regular);
  }

  .description {
    margin: 0.25rem 0;
    color: var(--gray-200);
    font-size: var(--text-md);
  }

  .metadata {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gray-400);
    font-size: var(--text-sm);
    margin: 0.25rem 0;
  }

  .separator {
    color: var(--gray-500);
  }

  .tags {
    display: flex;
    gap: 0.75rem;
  }

  .tag {
    color: var(--accent-regular);
    font-size: var(--text-sm);
  }

  @media (max-width: 50em) {
    .post-preview {
      grid-template-columns: 100px 1fr;
      gap: 0.75rem;
    }

    .image {
      width: 100px;
      height: 67px;
    }
  }
</style>
